{
  "name": "@groonttech/postgrape",
  "version": "1.3.1",
  "description": "Postgrape allows developers to interact with a PostgreSQL database using JavaScript objects and classes, abstracting away SQL queries. It simplifies database operations by providing a higher-level API, enabling developers to work with database entities as if they were regular JavaScript objects, reducing boilerplate code and improving code maintainability.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "rimraf lib && tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "test": "jest --config jestconfig.json",
    "test:cov": "jest --config jestconfig.json --coverage",
    "test:e2e": "jest --config ./test/jestconfig.e2e.json",
    "final": "npm run build && npm run lint && npm run test",
    "prepare": "npm run build",
    "preversion": "npm run lint && npm test",
    "version": "npm run format"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/@groonttech"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/groonttech/postgrape.git"
  },
  "author": "vistoriel, strelock1010",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/groonttech/postgrape/issues"
  },
  "homepage": "https://github.com/groonttech/postgrape#readme",
  "dependencies": {
    "@nestjs/common": "^9.4.0",
    "luxon": "^3.3.0",
    "pg": "^8.10.0"
  },
  "devDependencies": {
    "@nestjs/testing": "^9.4.0",
    "@types/jest": "^29.5.1",
    "@types/luxon": "^3.3.1",
    "@types/node": "^20.1.0",
    "@types/pg": "^8.6.6",
    "dotenv": "^16.0.3",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^5.0.4"
  },
  "files": [
    "lib/**/*"
  ]
}
